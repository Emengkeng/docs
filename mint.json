{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Even Top",
  "logo": {
    "dark": "/logo/eventop-logo-white.png",
    "light": "/logo/eventop-logo-black.png"
  },
  "favicon": "/favicon.ico",
  "colors": {
    "primary": "#18181b",
    "light": "#71717a",
    "dark": "#18181b",
    "background": {
      "dark": "#09090b",
      "light": "#ffffff"
    },
    "anchors": {
      "from": "#18181b",
      "to": "#71717a"
    }
  },
  "topbarLinks": [
    {
      "name": "Dashboard",
      "url": "https://dashboard.eventop.xyz"
    },
    {
      "name": "npm",
      "url": "https://www.npmjs.com/package/@eventop/sdk"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/getting-started/quickstart"
  },
  "navigation": [
    {
      "group": "Overview",
      "pages": ["introduction"]
    },
    {
      "group": "Getting Started",
      "pages": [
        "getting-started/quickstart",
        "getting-started/react",
        "getting-started/nextjs"
      ]
    },
    {
      "group": "Features",
      "pages": [
        "features/smart-navigation",
        "features/multi-step-flows",
        "features/async-validation",
        "features/tour-status",
        "features/theming"
      ]
    },
    {
      "group": "API Reference",
      "pages": [
        "api-reference/provider",
        "api-reference/target",
        "api-reference/step",
        "api-reference/hooks"
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/introduction"
    }
  ],
  "footerSocials": {
    "twitter": "https://x.com/tryEventop",
    "github": "https://github.com/eventop-s"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "backgroundImage": "/images/background.png",
  "modeToggle": {
    "default": "light",
    "isHidden": false
  }
}